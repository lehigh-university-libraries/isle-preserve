{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>lehigh-university-libraries/renovate-config',
    'github>lehigh-university-libraries/renovate-config:weeklyBump.json5',
  ],
  kubernetes: {
    managerFilePatterns: [
      '/ci/k8s/.+\\.yaml$/',
    ],
  },
  packageRules: [
    {
      matchDatasources: [
        'packagist',
      ],
      matchPackageNames: [
        'library/pdf.js',
      ],
      enabled: false,
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'major',
      ],
      groupName: 'islandora-major-update',
      matchPackageNames: [
        'islandora/*',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'ghcr.io/lehigh-university-libraries/actions-runner',
        'us-docker.pkg.dev/lehigh-lts-images/public/fabricator',
      ],
      pinDigests: false,
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/drupal/rootfs/var/www/drupal/composer.json/',
      ],
      matchStrings: [
        '\\s+"url":\\s"https:\\/\\/github.com\\/mozilla\\/pdf\\.js\\/releases\\/download\\/v(?<currentValue>.*)\\/(?:pdfjs-[^\\/]+)-dist\\.zip"',
      ],
      depNameTemplate: 'mozilla/pdf.js',
      datasourceTemplate: 'github-releases',
      versioningTemplate: 'semver-coerced',
    },
  ],
}
