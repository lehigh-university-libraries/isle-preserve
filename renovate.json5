{
  branchPrefix: 'renovate.',
  extends: [
    'config:best-practices',
    ':rebaseStalePrs',
    'customManagers:dockerfileVersions',
  ],
  kubernetes: {
    managerFilePatterns: [
      '/ci/k8s/.+\\.yaml$/',
    ],
  },
  packageRules: [
    {
      matchDatasources: [
        'repology',
      ],
      versioning: 'loose',
    },
    {
      matchDatasources: [
        'packagist',
      ],
      matchPackageNames: [
        'library/pdf.js',
      ],
      enabled: false,
    },
    {
      matchPackageNames: [
        'traefik',
        'nginx',
      ],
      groupName: 'monthly-ingress',
      schedule: [
        '* 12 1-7 * 4',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'digest',
      ],
      groupName: 'all non-major dependencies',
      schedule: [
        '* 22 * * 3',
      ],
      matchPackageNames: [
        '*',
        '!traefik',
        '!nginx',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchPackagePatterns: [
        '^islandora/',
      ],
      matchUpdateTypes: [
        'major',
      ],
      groupName: 'islandora-major-update',
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      groupName: null,
      matchPackageNames: [
        '*',
      ],
      prConcurrentLimit: 1,
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'ghcr.io/lehigh-university-libraries/actions-runner',
        'us-docker.pkg.dev/lehigh-lts-images/public/fabricator',
      ],
      pinDigests: false,
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^Dockerfile$/',
      ],
      matchStrings: [
        '#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG .*?_VERSION="(?<currentValue>.*)"\\s',
      ],
    },
    {
      customType: 'regex',
      managerFilePatterns: [
        '/drupal/rootfs/var/www/drupal/composer.json/',
      ],
      matchStrings: [
        '\\s+"url":\\s"https:\\/\\/github.com\\/mozilla\\/pdf\\.js\\/releases\\/download\\/v(?<currentValue>.*)\\/(?:pdfjs-[^\\/]+)-dist\\.zip"',
      ],
      depNameTemplate: 'mozilla/pdf.js',
      datasourceTemplate: 'github-releases',
      versioningTemplate: 'semver-coerced',
    },
  ],
  labels: [
    'dependencies',
  ],
  osvVulnerabilityAlerts: true,
  dependencyDashboardOSVVulnerabilitySummary: 'unresolved',
  vulnerabilityAlerts: {
    enabled: true,
  },
}
