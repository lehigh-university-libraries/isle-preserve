{
  branchPrefix: 'renovate.',
  extends: [
    'config:best-practices',
    ':rebaseStalePrs',
    'customManagers:dockerfileVersions',
  ],
  kubernetes: {
    fileMatch: [
      'ci/k8s/.+\\.yaml$',
    ],
  },
  packageRules: [
    {
      matchDatasources: [
        'repology',
      ],
      versioning: 'loose',
    },
    {
      matchPackageNames: [
        'traefik',
        'nginx',
      ],
      groupName: 'monthly-ingress',
      schedule: [
        '* 12 1-7 * 4',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'digest',
      ],
      groupName: 'all non-major dependencies',
      schedule: [
        'after 10pm on Friday',
      ],
      matchPackageNames: [
        '*',
        '!traefik',
        '!nginx',
      ],
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      groupName: null,
      matchPackageNames: [
        '*',
      ],
      prConcurrentLimit: 1,
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        '^Dockerfile$',
      ],
      matchStrings: [
        '#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG .*?_VERSION="(?<currentValue>.*)"\\s',
      ],
    },
  ],
  labels: [
    'dependencies',
  ],
  osvVulnerabilityAlerts: true,
  dependencyDashboardOSVVulnerabilitySummary: 'unresolved',
  vulnerabilityAlerts: {
    enabled: true,
  },
}
