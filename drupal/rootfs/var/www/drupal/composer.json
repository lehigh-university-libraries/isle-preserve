{
    "name": "islandora/islandora-starter-site",
    "description": "Project template for Islandora sites. TEST",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.islandora.ca",
    "support": {
        "docs": "https://islandora.github.io/documentation/",
        "chat": "https://www.islandora.ca/community#channels-of-communication"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "library/pdf.js",
                "version": "2.16.105",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/mozilla/pdf.js/releases/download/v2.16.105/pdfjs-2.16.105-dist.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "jackmoore/colorbox",
                "version": "1.6.4",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/jackmoore/colorbox/archive/1.6.4.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "freepik-labs/dom-purify",
                "version": "0.2.5",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/Freepik-Labs/dom-purify/archive/refs/tags/0.2.5.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "masonry/masonry",
                "version": "v4.2.2",
                "type": "drupal-library",
                "extra": {
                    "installer-name": "masonry"
                },
                "dist": {
                    "url": "https://github.com/desandro/masonry/archive/v4.2.2.zip",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "imagesloaded/imagesloaded",
                "version": "v4.1.4",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/desandro/imagesloaded/archive/v4.1.4.zip",
                    "type": "zip"
                },
                "extra": {
                    "installer-name": "imagesloaded"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.1",
        "drupal/advanced_search": "^2.0.0@beta",
        "drupal/better_exposed_filters": "^6.0",
        "drupal/bibcite": "^2.0@beta",
        "drupal/bulk_update_fields": "^2.0@alpha",
        "drupal/citation_select": "^1.0@beta",
        "drupal/colorbox": "^2.0",
        "drupal/config_update": "^2.0@alpha",
        "drupal/context": "^5@RC",
        "drupal/controlled_access_terms": "^2",
        "drupal/core-composer-scaffold": "^10.1",
        "drupal/core-recommended": "^10.1",
        "drupal/csv_serialization": "^4.0",
        "drupal/entity": "^1.4",
        "drupal/entity_browser": "^2.9",
        "drupal/entity_reference_facet_link": "^2.0",
        "drupal/entity_reference_revisions": "^1.10",
        "drupal/facets": "^2",
        "drupal/field_delimiter": "^2.0",
        "drupal/field_group": "^3.4",
        "drupal/field_permissions": "^1",
        "drupal/field_report": "^2.1",
        "drupal/file_download_link": "^2.0",
        "drupal/file_download_link_media": "^2.0",
        "drupal/flysystem": "^2.0@alpha",
        "drupal/geolocation": "^3.12",
        "drupal/hal": "^2.0",
        "drupal/image_effects": "^3.4",
        "drupal/inline_entity_form": "^2.0@RC",
        "drupal/islandora": "^2.8.1",
        "drupal/islandora_mirador": "^2.3",
        "drupal/ldap": "^4.6",
        "drupal/libraries": "^4.0",
        "drupal/masonry": "^4.0",
        "drupal/masonry_views": "^4.0",
        "drupal/matomo": "^1.23",
        "drupal/metatag": "^2.0",
        "drupal/metatag_google_scholar": "^1.1",
        "drupal/migrate_tools": "^6.0",
        "drupal/openseadragon": "^2.2",
        "drupal/paragraphs": "^1.16",
        "drupal/pathauto": "^1.12",
        "drupal/pdf": "^1.1",
        "drupal/rabbit_hole": "^1.0@beta",
        "drupal/rest_oai_pmh": "^2.0@beta",
        "drupal/search_api": "^1.31",
        "drupal/search_api_solr": "^4.3",
        "drupal/seven": "^1.0",
        "drupal/structure_sync": "^2.0",
        "drupal/superfish": "^1.7",
        "drupal/svg_image": "^3.0",
        "drupal/svg_image_responsive": "^3.0",
        "drupal/taxonomy_manager": "^2.0",
        "drupal/term_condition": "^2.0",
        "drupal/term_merge": "^2.0@beta",
        "drupal/token": "^1.13",
        "drupal/token_filter": "^2.0",
        "drupal/transliterate_filenames": "^2.0",
        "drupal/twig_attributes": "^2.0",
        "drupal/twig_tweak": "^3.2",
        "drupal/verf": "^2.0",
        "drupal/views_ajax_history": "^1.7",
        "drupal/views_bulk_operations": "^4.2",
        "drupal/views_data_export": "^1.4",
        "drupal/views_field_view": "^1.0@beta",
        "drupal/views_infinite_scroll": "^2.0",
        "drupal/views_tokenized": "^1.0@RC",
        "drush/drush": "^12",
        "imagesloaded/imagesloaded": "^4.1",
        "islandora-rdm/islandora_fits": "dev-8.x-1.x as 1.x-dev",
        "islandora/islandora": "2.9.0",
        "islandora/islandora_mirador": "^2",
        "islandora/views_nested_details": "^1.0",
        "library/pdf.js": "^2.4",
        "masonry/masonry": "^4.2",
        "mjordan/islandora_workbench_integration": "dev-main",
        "stop14/agile_slide_viewer": "^1.0",
        "stop14/stop14_tools": "^1.2"
    },
    "conflict": {
        "drupal/drupal": "*",
        "drupal/core": "<=8"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": "stash",
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/default/settings.php": {
                    "mode": "append",
                    "default": "web/core/assets/scaffold/files/default.settings.php",
                    "append": "assets/patches/default_settings.txt"
                }
            }
        },
        "installer-types": ["npm-asset", "bower-asset"],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "vendor:bower-asset",
                "vendor:npm-asset",
                "type:bower-asset",
                "type:npm-asset"

            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "patches": {
            "drupal/facets": {
                "Allow exposed filters to work with AJAX Facets": "https://www.drupal.org/files/issues/2021-12-05/3168241-8.patch",
                "Allow views attachments to reflect search parameters (still not working)": "https://www.drupal.org/files/issues/2022-12-12/facets-attachments-3116236-16.patch",
                "Allows for multiple facet searchboxes on same page": "https://www.drupal.org/files/issues/2022-08-03/facets-3300204-3.patch"
            }
        },
	    "merge-plugin": {
            "include": [
                "web/modules/contrib/masonry/composer.libraries.json"
            ]
        }
    },
    "scripts": {
        "post-root-package-install": ["Islandora\\StarterSite::rootPackageInstall"],
        "post-install-cmd": ["cp -rf assets/libraries/jquery-ui-slider-pips web/libraries"],
        "post-update-cmd": ["cp -rf assets/libraries/jquery-ui-slider-pips web/libraries"]
    },
    "require-dev": {
        "drupal/config_inspector": "^2.1",
        "drupal/devel": "^5.0",
        "drupal/restui": "^1.21"
    },
    "autoload": {
        "classmap": [
            "assets/IslandoraStarterSite.php"
        ]
    }
}
