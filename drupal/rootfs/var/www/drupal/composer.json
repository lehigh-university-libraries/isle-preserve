    },
    "conflict": {
        "drupal/drupal": "*",
        "drupal/core": "<=8"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": "stash",
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true,
            "tbachert/spi": false
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "allowed-packages": [
                "weitzman/drupal-test-traits"
            ],
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/default/settings.php": {
                    "mode": "append",
                    "default": "web/core/assets/scaffold/files/default.settings.php",
                    "append": "assets/patches/default_settings.txt"
                },
                "[web-root]/robots.txt": false
            }
        },
        "installer-types": ["npm-asset", "bower-asset"],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "vendor:bower-asset",
                "vendor:npm-asset",
                "type:bower-asset",
                "type:npm-asset"

            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "patches": {
            "discoverygarden/islandora_hocr": {
                "Only read hocr file when indexing": "assets/patches/discoverygarden/islandora_hocr/index-only.patch"
            },
            "drupal/facets": {
                "Allow exposed filters to work with AJAX Facets": "https://www.drupal.org/files/issues/2021-12-05/3168241-8.patch",
                "Allow views attachments to reflect search parameters (still not working)": "https://www.drupal.org/files/issues/2022-12-12/facets-attachments-3116236-16.patch",
                "Show label on summary": "assets/patches/drupal/facets/summary-label.patch"
            },
            "drupal/drupal_slider": {
                "jquery once": "https://www.drupal.org/files/issues/2024-02-16/jquery_once_fix_0.patch",
                "Issues 3209755": "assets/patches/drupal/drupal_slider/3209755.patch"
            },
            "drupal/islandora": {
                "node label": "assets/patches/drupal/islandora/label.patch",
                "override domain": "assets/patches/drupal/islandora/event-overwrite.patch"
            },
            "islandora-rdm/islandora_fits": {
                "Remove deprecated function call": "https://github.com/roblib/islandora_fits/pull/18.patch"
            },
            "twistor/flysystem-stream-wrapper": {
                "Fix php82 warning": "https://github.com/twistor/flysystem-stream-wrapper/pull/28.patch"
            },
            "drupal/core": {
                "Fix php warning for stripos": "assets/patches/drupal/core/stripos.patch"
            },
            "drupal/context": {
                "Fix str_replace warning": "assets/patches/drupal/context/str_replace.patch"
            }
        },
        "merge-plugin": {
            "include": [
                "web/modules/contrib/masonry/composer.libraries.json"
            ]
        }
    },
    "scripts": {
        "post-root-package-install": ["Islandora\\StarterSite::rootPackageInstall"]
    },
    "require-dev": {
        "chi-teck/drupal-code-generator": "^3.3",
        "drupal/config_inspector": "^2.1",
        "drupal/core-dev": "^10.1",
        "drupal/devel": "^5.0",
        "drupal/restui": "^1.21",
        "palantirnet/drupal-rector": "^0.20.3",
        "phpspec/prophecy-phpunit": "^2.1",
        "weitzman/drupal-test-traits": "^2.5"
    },
    "autoload": {
        "classmap": [
            "assets/IslandoraStarterSite.php"
        ]
    }
}
